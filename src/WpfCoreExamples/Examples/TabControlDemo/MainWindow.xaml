<Window x:Class="TabControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabControlDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <TabControl x:Name="MyTabControl" Margin="20" >
            <TabItem x:Name="TabA" Header="AAA" Width="40">
                <StackPanel>
                    <TextBox Margin="10"/>
                    <Button Content="Save" 
                            Margin="10"/>
                </StackPanel>
            </TabItem>
            <TabItem x:Name="TabB" Header="BBB" Width="40">
                <StackPanel>
                    <TextBox Margin="10"/>
                    <Button Content="Search" 
                            Margin="10"/>
                </StackPanel>
            </TabItem>
            <TabItem x:Name="TabC" Header="CCC" Visibility="Collapsed" Width="40"/>
            <TabItem x:Name="TabD" Header="DDD" Width="40"/>
            <TabItem x:Name="HiddenTab" Header="HHH" Visibility="Hidden" Tag="spacer"/>

            <TabItem x:Name="TabZ" Header="ZZZ" Width="40">
            </TabItem>
        </TabControl>
    </Grid></Window>
